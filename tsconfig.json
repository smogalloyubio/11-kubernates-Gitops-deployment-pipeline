{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["node"],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",

    // Add baseUrl and clear path aliases
    "baseUrl": ".",
    "paths": {
      "@types": ["types.ts"],
      "@constants": ["constants.ts"],
      "@services/*": ["services/*"],
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"]
    },

    "allowImportingTsExtensions": true,
    "noEmit": true // Must be false for Docker build
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
